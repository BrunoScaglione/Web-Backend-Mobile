<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Especie</th>
      <th>Raca</th>
      <th>Porte</th>
      <th>Comentario</th>
      <th>Solicitante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.nome %></td>
        <td><%= pet.especie %></td>
        <td><%= pet.raca %></td>
        <td><%= pet.porte %></td>
        <td><%= pet.comentario %></td>
        <td><%= pet.solicitante %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

