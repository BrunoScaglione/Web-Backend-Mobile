<h1>Lista de posts</h1>

<% @posts.each do |post| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li>
          <%= link_to post.titulo, post_path(post) %>
        </li>
      </div>
    </div>
  </ul>
<% end %>

<%= link_to 'Criar post', new_post_path %>
<%= link_to 'Voltar', home_path %>