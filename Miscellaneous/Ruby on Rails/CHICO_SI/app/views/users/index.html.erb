<h1>Lista de todos os usuários</h1>

<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <% if current_user.authority >= user.authority %>
          <li>
            <%= link_to gravatar_for(user), user_path(user) %>
            <%= link_to user.email, user_path(user) %>
            <%= user.authority %>
          </li>
        <% end %>
      </div>
    </div>
  </ul>
<% end %>

<%= link_to 'Registrar novo usuário', register_path %>
<%= link_to 'Voltar', home_path %>