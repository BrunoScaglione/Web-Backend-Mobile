<h1>Lista de grupos</h1>

<% @groups.each do |group| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li>
          <%= link_to group.nome, group_path(group) %>
        </li>
      </div>
    </div>
  </ul>
<% end %>

<%= link_to 'Criar grupo', new_group_path %>
<%= link_to 'Voltar', home_path %>