<div id="calendar">
  <h1>Eventos</h1>
  <h2 id="month">
    <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m-%d") %>
    <%=h @date.strftime("%B %Y") %>
    <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m-%d") %>
  </h2>
  <%= calendar_for @events, :year => @date.year, :month => @date.month do |t| %>
    <%= t.head('DOM','SEG', 'TER', 'QUA', 'QUI', 'SEX', 'SAB') %>
    <%= t.day do |day, events| %>
      <%= day.day %>
      <% events.each do |event| %><br>
        <%= link_to h(event.titulo), event %><br>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to 'Novo Evento', new_event_path %>
<%= link_to 'Voltar', home_path %>